{
  "name": "coc-kite",
  "version": "0.0.10",
  "description": "Kite extension for coc.nvim",
  "author": "Heyward Fann <fannheyward@gmail.com>",
  "license": "MIT",
  "main": "lib/index.js",
  "keywords": [
    "coc.nvim"
  ],
  "engines": {
    "coc": "^0.0.70"
  },
  "scripts": {
    "clean": "rimraf lib",
    "watch": "webpack --watch",
    "lint": "eslint src --ext ts",
    "build": "webpack",
    "prepare": "npm-run-all clean build"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 160,
    "semi": true
  },
  "devDependencies": {
    "@types/node": "^14.0.12",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "coc.nvim": "^0.0.77",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.3",
    "kite-api": "^3.13.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.2",
    "rimraf": "^3.0.0",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.5",
    "vscode-languageserver-protocol": "^3.15.2",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "resolutions": {
    "kite-connector": "^3.12.0"
  },
  "activationEvents": [
    "onLanguage:python"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "coc-kite configuration",
      "properties": {
        "kite.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable coc-kite extension"
        },
        "kite.pollingInterval": {
          "type": "integer",
          "default": 5000,
          "description": "Interval in milliseconds at which the Kite extension polls Kite Engine to get the status of the current file."
        },
        "kite.startKiteEngineOnStartup": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start Kite Engine on editor startup if it's not already running."
        },
        "kite.enableSnippets": {
          "type": "boolean",
          "default": true,
          "description": "Enable snippet completions"
        }
      }
    },
    "commands": [
      {
        "command": "kite.login",
        "title": "Kite: Login",
        "category": "Kite"
      },
      {
        "command": "kite.openSettings",
        "title": "Kite: Open settings",
        "category": "Kite"
      },
      {
        "command": "kite.openCopilot",
        "title": "Kite: Open Copilot",
        "category": "Kite"
      }
    ]
  }
}
