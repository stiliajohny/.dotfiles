# screenshot
bindsym Print exec scrot '%S:%M:%H_%Y-%m-%d_$wx$h.png' -e 'mv $f ~/Pictures/Screenshots/'
bindsym Control+Print exec scrot -u $HOME/Pictures/Screenshots/`date +%Y-%m-%d_%H:%M:%S`.png
bindsym Control+Shift+Print exec scrot -s $HOME/Pictures/Screenshots/$(date +%Y-%m-%d_%H:%M:%S).png



# Lock screen
bindsym $mod+l exec betterlockscreen -l -d -b -t "Don't touch my machine!"
#bindsym $mod+l exec i3lock-fancy

bindsym $mod+n mode "$mode_system"
set $mode_system (l)ock, (e)xit, switch_(u)ser, (s)uspend, (h)ibernate, (r)eboot, (Shift+s)hutdown
mode "$mode_system" {
	bindsym l exec --no-startup-id i3exit lock, mode "default"
		bindsym s exec --no-startup-id i3exit suspend, mode "default"
		bindsym u exec --no-startup-id i3exit switch_user, mode "default"
		bindsym e exec --no-startup-id i3exit logout, mode "default"
		bindsym h exec --no-startup-id i3exit hibernate, mode "default"
		bindsym r exec --no-startup-id i3exit reboot, mode "default"
		bindsym Shift+s exec --no-startup-id i3exit shutdown, mode "default"

# exit system mode: "Enter" or "Escape"
		bindsym Return mode "default"
		bindsym Escape mode "default"
}
#Setting wallpaper
exec --no-startup-id feh --bg-fill  ~/.config/wallpaper/wallpaper.jpg;  exec notify-send "Update Wallpaper"
#exec --no-startup-id feh --bg-fill  ~/.config/wallpaper/$(ls ~/.config/wallpaper | shuf -n 1);  exec notify-send "Update Wallpaper"
exec --no-startup-id betterlockscreen -u  ~/.config/wallpaper/wallpaper.jpg ; exec notify-send "Update Betterlockscreen "
#exec --no-startup-id betterlockscreen -u  ~/.config/wallpaper/$(ls ~/.config/wallpaper | shuf -n 1); exec notify-send "Update Betterlockscreen "

# Autostart applications
exec --no-startup-id xrandr --output eDP1 --mode 2880x1620; exec notify-send "Change screen resolution "
exec --no-startup-id betterlockscreen -w dim; exec notify-send "Initiate Betterlockscreen "
exec --no-startup-id redshift-gtk; exec notify-send "Initiate Redshift"
exec --no-startup-id blueman-applet; exec notify-send "Initiate Bluetooth Manager"
exec --no-startup-id picom --shadow-exclude '!focused' -b --config %HOME/.config/compton/compton.conf ;exec notify-send "Initiate Picom"
exec_always  ~/.config/polybar/launch.sh ;exec notify-send "Initiate Polybar"
exec --no-startup-id discord --start-minimized& ;exec notify-send "Initiate Discord" -i "/usr/share/pixmaps/discord.png" 

